# Pleasant Cove Design - Environment Configuration

# Production URLs
PCD_SOCKET_URL=https://pleasantcovedesign-production.up.railway.app
PCD_API_URL=https://pleasantcovedesign-production.up.railway.app/api
PCD_ADMIN_TOKEN=pleasantcove2024admin

# Development URLs (uncomment for local development)
# PCD_SOCKET_URL=http://localhost:3000
# PCD_API_URL=http://localhost:3000/api

# Database
DATABASE_URL=sqlite:./data/database.db
# DATABASE_URL=postgresql://user:password@localhost:5432/pleasantcove

# File Storage
STORAGE_TYPE=local
# STORAGE_TYPE=r2
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=pleasantcove-uploads

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Python Bot Integration
PYTHON_PATH=/usr/bin/python3
BOT_SCRIPT_PATH=../bot_cli.py

# Squarespace Integration
SQUARESPACE_API_KEY=your-api-key
SQUARESPACE_SITE_ID=your-site-id
